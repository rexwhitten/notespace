<% layout('layout') -%>
<% if (!user) { %>
	<h2>Welcome! Please log in.</h2>
<% } else { %>
	<h2>Hello, <%= user.username %>.</h2>
    <div class="container-fluid">
        <div class="row">
            <!-- Tree -->
            <div class="col-md-2">
                <div id="directory">
                    <ul>
                        <li>
                            Root node
                            <ul>
                                <li>Child node 1</li>
                                <li>Child node 2</li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- content -->
            <div class="col-md-10">
               <textarea id="editor" class="container document-editor"></textarea>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        head.ready(function () {

            // Tree 
            $('#directory').jstree();

            // Editor 
            $('#editor').wysihtml5();

        });
    </script>
<% } %>
